.loc-res {
  height: 150rpx;
  width:100%;
  /*top:0rpx;*/
  position: relative;
  display: block;
  margin-bottom: 20rpx;
  margin-left:15rpx;
  border-bottom-width: 90%;
  border-bottom-color: rgb(221, 221, 217);
}
.loc-icon{
 height: 27px;
 width:18px;
 display: inline-block;
 margin-right: 10rpx;
}
.loc-name{
  height: 40%;
  width:90%;
  display: inline-block;
