<!--pages/map/map.wxml-->
<map
  id="map"
  longitude="{{loc.longitude}}"
  latitude="{{loc.latitude}}"
  scale="14"
  controls="{{controls}}"
  bindcontroltap="controltap"
  markers="{{markers}}"
  bindmarkertap="markertap"
  polyline="{{polyline}}"
  bindregionchange="regionchange"
  show-location
  style="width: 100%; height: 90%;"
></map>
<button bindtap="tap" style="height:10%;">打开内置导航</button>
